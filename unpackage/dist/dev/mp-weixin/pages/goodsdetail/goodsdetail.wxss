.goods-detail {
  background-color: #f1ece7;
  position: relative;
}
.goods-detail .banner {
  width: 750rpx;
  height: 634rpx;
}
.goods-detail .banner image {
  width: 100%;
  height: 634rpx;
}
.goods-detail .star {
  position: absolute;
  top: 580rpx;
  right: 100rpx;
}
.goods-detail .desc {
  padding: 70rpx;
}
.goods-detail .desc .price {
  color: red;
  font-size: 60rpx;
  font-weight: 700;
}
.goods-detail .contImg {
  width: 100%;
  padding-bottom: 150rpx;
  text-align: center;
}
.goods-detail .contImg  ._img {
  width: 90%;
  height: auto;
}
.goods-detail .mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}
.goods-detail .mask .box {
  position: relative;
  width: 80%;
  height: 60%;
  background-color: white;
}
.goods-detail .mask .box .close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  z-index: 5;
}
.goods-detail .mask .box .boxImg {
  width: 192rpx;
  height: 192rpx;
  position: absolute;
  top: -50rpx;
  left: 50rpx;
}
.goods-detail .mask .box .cont {
  margin-top: 100rpx;
  margin-left: 300rpx;
}
.goods-detail .mask .box .boxcenter {
  width: 70%;
  margin: 50rpx auto 0;
}
.goods-detail .mask .box .boxcenter .mkbig {
  font-size: 30rpx;
  font-weight: 700;
}
.goods-detail .mask .box .boxcenter .changeitem {
  margin-top: 10rpx;
  height: 150rpx;
  overflow: auto;
}
.goods-detail .mask .box .boxcenter .changeitem .item {
  width: 100%;
  height: 50rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  background-color: #f2f4f3;
  margin-bottom: 20rpx;
}
.goods-detail .mask .box .boxcenter .changeitem .active {
  border: 4rpx solid #000;
}
.goods-detail .mask .box .boxcenter .shopnum {
  display: flex;
  justify-content: space-between;
}
.goods-detail .mask .box .submit {
  width: 200rpx;
  height: 70rpx;
  color: #fff;
  line-height: 70rpx;
  border-radius: 20rpx;
  background-color: #354e44;
  margin: 20rpx auto 0;
}
.goods-detail .footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: white;
}
.goods-detail .footer .addcart {
  width: 50%;
  height: 100rpx;
  background-color: #e2e2e2;
  color: #8f8f94;
}
.goods-detail .footer .shop {
  width: 50%;
  height: 100rpx;
  background-color: #354e44;
}

