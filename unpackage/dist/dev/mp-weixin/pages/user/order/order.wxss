.order {
  background-color: #f1ece7;
}
.order .box {
  padding: 0 60rpx;
  height: 100vh;
}
.order .box .waitpay {
  height: 86rpx;
  border-bottom: 2rpx solid #ccc;
  line-height: 86rpx;
  font-size: 36rpx;
}
.order .box .changeAddress {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #ccc;
}
.order .box .changeAddress .address {
  font-size: 28rpx;
}
.order .box .card {
  margin-top: 30rpx;
  padding: 36rpx;
  background-color: #FFF;
  border-radius: 20rpx;
}
.order .box .card .top {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f1ece7;
}
.order .box .card .items {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f1ece7;
}
.order .box .card .items .img {
  width: 170rpx;
  height: 170rpx;
}
.order .box .card .items .info {
  margin-left: 28rpx;
  width: 392rpx;
  display: flex;
  flex-direction: column;
}
.order .box .card .items .info .num1 {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  line-height: 74rpx;
}
.order .box .card .items .info .num2 {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #8d8d8d;
  line-height: 30rpx;
}
.order .box .card .items .info .num3 {
  font-size: 22rpx;
  color: #8d8d8d;
  line-height: 30rpx;
}
.order .box .card .allprice {
  font-size: 26rpx;
  line-height: 36rpx;
  text-align: right;
  margin-top: 14rpx;
}
.order .box .card .btn {
  display: flex;
  justify-content: flex-end;
  margin-top: 14rpx;
}
.order .box .card .btn .submit {
  width: 124rpx;
  height: 50rpx;
  border: 2rpx solid #2d4f43;
  font-size: 26rpx;
  border-radius: 10rpx;
  color: #2d4f43;
  text-align: center;
  line-height: 50rpx;
}

