  border-bottom: 2rpx solid #f1ece7;
}
.tuidan .card .items {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f1ece7;
}
.tuidan .card .items .img {
  width: 170rpx;
  height: 170rpx;
}
.tuidan .card .items .info {
  margin-left: 28rpx;
  width: 392rpx;
