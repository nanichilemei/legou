.head {
  display: flex;
  justify-content: space-around;
  height: 62rpx;
  padding-top: 14rpx;
  background-color: #354e44;
  color: #fff;
  font-size: 30rpx;
  line-height: 62rpx;
  position: fixed;
  top: 0;
  width: 100%;
  margin-top: 80rpx;
  left: 0;
  z-index: 999;
}
.head .active {
  box-sizing: border-box;
  border-bottom: 4rpx solid red;
  color: red;
}
.cont {
  margin-top: 100rpx;
}
.cont .item {
  width: 690rpx;
  margin: 30rpx auto;
}
.cont .item .card {
  padding: 36rpx;
  background-color: #FFF;
  border-radius: 20rpx;
}
.cont .item .card .top {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f1ece7;
}
.cont .item .card .items {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f1ece7;
}
.cont .item .card .items .img {
  width: 170rpx;
  height: 170rpx;
}
.cont .item .card .items .info {
  margin-left: 28rpx;
  width: 392rpx;
  display: flex;
  flex-direction: column;
}
.cont .item .card .items .info .num1 {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  line-height: 74rpx;
}
.cont .item .card .items .info .num2 {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #8d8d8d;
  line-height: 30rpx;
}
.cont .item .card .items .info .num3 {
  font-size: 22rpx;
  color: #8d8d8d;
  line-height: 30rpx;
}
.cont .item .card .items .info .num4 {
  font-size: 22rpx;
  text-align: right;
  margin-top: 10rpx;
  color: #8d8d8d;
}
.cont .item .card .center {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-top: 14rpx;
}
.cont .item .card .btn {
  display: flex;
  justify-content: flex-end;
  margin-top: 14rpx;
}
.cont .item .card .btn .bot {
  width: 124rpx;
  height: 50rpx;
  border: 2rpx solid #2d4f43;
  font-size: 26rpx;
  border-radius: 10rpx;
  color: #2d4f43;
  text-align: center;
  line-height: 50rpx;
  margin-left: 32rpx;
}
.cont .item .card .btn .red {
  width: auto;
  padding: 0 15rpx;
  border: 2rpx solid red;
}

