.user {
  background-color: #f1ece7;
  height: 100vh;
}
.user .box {
  padding: 0 40rpx;
}
.user .box .top {
  padding-top: 60rpx;
  overflow: hidden;
}
.user .box .top .topImg {
  float: left;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
}
.user .box .top .username {
  float: left;
  margin-left: 32rpx;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.user .box .top .username .name {
  font-size: 40rpx;
  font-weight: 600;
}
.user .box .top .username .phoneId {
  color: #999;
  font-size: 26rpx;
}
.user .box .isuser {
  margin: 40rpx 0;
  display: flex;
  justify-content: space-around;
  text-align: center;
  line-height: 72rpx;
}
.user .box .isuser .register {
  width: 180rpx;
  height: 72rpx;
  border: 2rpx solid #354e44;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.user .box .isuser .gologin {
  width: 180rpx;
  height: 72rpx;
  border: 2rpx solid #354e44;
  box-sizing: border-box;
  background-color: #354e44;
  color: #fff;
  border-radius: 10rpx;
}
.user .box .center {
  height: 208rpx;
  margin-top: 60rpx;
  background-color: #fff;
}
.user .box .center .title {
  margin: 0 54rpx;
  height: 76rpx;
  font-size: 26rpx;
  line-height: 76rpx;
  border-bottom: 2rpx solid #ddd;
  box-sizing: border-box;
}
.user .box .center .navs {
  padding: 0 54rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}
.user .box .center .navs .items {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user .box .center .navs .items .iconord {
  margin-top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.user .box .center .navs .items .ordname {
  margin-top: 10rpx;
  font-size: 26rpx;
  line-height: 36rpx;
}
.user .box .footer {
  border-radius: 20rpx;
  background-color: #FFF;
  margin-top: 60rpx;
  padding: 30rpx 0 60rpx;
}
.user .box .footer .list .item {
  padding: 36rpx 0;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.user .box .footer .list .item image {
  width: 50rpx;
  height: 50rpx;
}
.user .box .footer .list .item .text {
  font-size: 26rpx;
  line-height: 38rpx;
}

