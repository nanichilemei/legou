.item {
  width: 90%;
  box-sizing: border-box;
  padding: 20rpx;
  margin: 50rpx auto;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.item .info {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item .info image {
  width: 126rpx;
  height: 136rpx;
  margin: 0 20rpx;
}
.item .info .cont {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item .info .cont .right {
  font-size: 11px;
  color: #8d8d8d;
}
.item .info .cont .right .title {
  font-size: 26rpx;
  color: #3e3e3e;
}
.item .change {
  float: right;
}
.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.footer .sel-all {
  display: flex;
  align-items: center;
}
.footer .totalPrice {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.footer .totalPrice .price {
  color: red;
}
.footer .totalPrice .settlement {
  width: 208rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background-color: #354e44;
  line-height: 80rpx;
  text-align: center;
  color: #FFF;
  margin-left: 10rpx;
}

